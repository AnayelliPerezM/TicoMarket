@model ticomarkenet.Models.Imagen

@{
    ViewData["Title"] = "Crear Imágenes";
}

<h1>Subir Imágenes</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="form-group mb-3">
                <label class="form-label">Seleccionar imágenes</label>
                <input type="file" name="archivos" class="form-control" accept="image/*" multiple required />
                <small class="form-text text-muted">Puedes seleccionar varias imágenes manteniendo presionada Ctrl o Shift.</small>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ProductoId" class="form-label">Producto</label>
                <select asp-for="ProductoId" class="form-select" asp-items="ViewBag.ProductoId"></select>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Subir Imágenes</button>
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-outline-secondary">Volver al listado</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
