@model ticomarkenet.Models.Producto

@{
    ViewData["Title"] = "Crear Producto";
}

<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-sm p-4 w-100" style="max-width: 800px;">
        <h4 class="text-center mb-4">@ViewData["Title"]</h4>

        <div class="row">
            <!-- Columna izquierda: formulario -->
            <div class="col-md-6">
                <form asp-action="Guardar" class="needs-validation" novalidate>
                    <div class="mb-2">
                        <label asp-for="Nombre" class="form-label small"></label>
                        <input asp-for="Nombre" class="form-control form-control-sm" required />
                    </div>

                    <div class="mb-2">
                        <label asp-for="Descripcion" class="form-label small"></label>
                        <textarea asp-for="Descripcion" class="form-control form-control-sm" rows="3" required></textarea>
                    </div>

                    <div class="mb-2">
                        <label asp-for="Precio" class="form-label small"></label>
                        <input asp-for="Precio" class="form-control form-control-sm" type="number" min="0" step="0.01" required />
                    </div>

                    <div class="mb-2">
                        <label asp-for="Categoria" class="form-label small">Categoría</label>
                        <select asp-for="Categoria" class="form-select form-select-sm" required>
                            <option value="">-- Seleccione una categoría --</option>
                            <option value="Electrónica">Electrónica</option>
                            <option value="Ropa">Ropa</option>
                            <option value="Hogar">Hogar</option>
                            <option value="Juguetes">Juguetes</option>
                            <option value="Deportes">Deportes</option>
                        </select>
                        <span asp-validation-for="Categoria" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="UsuarioId" class="form-label small">Usuario</label>
                        <select asp-for="UsuarioId" class="form-select form-select-sm" asp-items="ViewBag.UsuarioId" required>
                            <option value="">-- Seleccione un usuario --</option>
                        </select>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <button type="submit" class="btn btn-success btn-sm">Guardar</button>
                        <a asp-action="Vista" class="btn btn-secondary btn-sm">Cancelar</a>
                    </div>
                </form>
            </div>

            <!-- Columna derecha: imagen -->
            <div class="col-md-6 border-start">
                <div class="mb-3">
                    <label class="form-label small">Subir imagen</label>
                    <input type="file" name="imagen" class="form-control form-control-sm" accept="image/*" />
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        (() => {
            'use strict';
            const forms = document.querySelectorAll('.needs-validation');
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>
}
