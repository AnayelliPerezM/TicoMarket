@model IEnumerable<ticomarkenet.Models.Producto>

@{
    ViewData["Title"] = "Lista de Productos";
    var productos = Model ?? new List<ticomarkenet.Models.Producto>();
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4">@ViewData["Title"]</h1>
        <a asp-action="Create" class="btn btn-primary btn-lg shadow-sm">
            <i class="bi bi-plus-circle"></i> Crear Producto
        </a>
    </div>

    <div class="card shadow-sm rounded">
        <div class="card-body p-0">
            <table class="table table-striped table-hover mb-0">
                <thead class="table-dark">
                    <tr>
                        <th style="width:5%">ID</th>
                        <th style="width:35%">Nombre</th>
                        <th style="width:15%">Precio</th>
                        <th style="width:25%">Categoría</th>
                        <th style="width:20%">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!productos.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted py-4">
                                No hay productos registrados aún.
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in productos)
                        {
                            <tr>
                                <td>@item.ProductoId</td>
                                <td>@item.Nombre</td>
                                <td>₡ @item.Precio</td>
                                <td>@item.Categoria</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.ProductoId" class="btn btn-sm btn-warning me-1" title="Editar">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.ProductoId" class="btn btn-sm btn-info me-1" title="Detalles">
                                        <i class="bi bi-info-circle"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.ProductoId" class="btn btn-sm btn-danger" title="Eliminar">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
}
