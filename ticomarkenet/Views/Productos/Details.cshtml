@model ticomarkenet.Models.Producto

@{
    ViewData["Title"] = "Detalles del Producto";
}

<div class="container mt-5">
    <div class="card shadow border-0">
        <div class="card-header bg-info text-white">
            <h3 class="mb-0"><i class="bi bi-info-circle-fill"></i> Detalles del Producto</h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 fw-bold">Nombre:</dt>
                <dd class="col-sm-9">@Model.Nombre</dd>

                <dt class="col-sm-3 fw-bold">Descripción:</dt>
                <dd class="col-sm-9">@Model.Descripcion</dd>

                <dt class="col-sm-3 fw-bold">Precio:</dt>
                <dd class="col-sm-9">₡ @Model.Precio</dd>

                <dt class="col-sm-3 fw-bold">Categoría:</dt>
                <dd class="col-sm-9">@Model.Categoria</dd>

                <dt class="col-sm-3 fw-bold">Usuario:</dt>
                <dd class="col-sm-9">#@Model.Usuario?.UsuarioId</dd>
            </dl>

            <div class="d-flex justify-content-end gap-2 mt-4">
                <a asp-action="Edit" asp-route-id="@Model.ProductoId" class="btn btn-warning">
                    <i class="bi bi-pencil"></i> Editar
                </a>
                <a asp-action="Vista" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle"></i> Volver a la lista
                </a>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
}
