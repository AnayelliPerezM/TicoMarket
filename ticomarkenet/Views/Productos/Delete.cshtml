@model ticomarkenet.Models.Producto

@{
    ViewData["Title"] = "Eliminar Producto";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0">¿Estás seguro que deseas eliminar este producto?</h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 fw-bold">Nombre:</dt>
                <dd class="col-sm-9">@Model.Nombre</dd>

                <dt class="col-sm-3 fw-bold">Descripción:</dt>
                <dd class="col-sm-9">@Model.Descripcion</dd>

                <dt class="col-sm-3 fw-bold">Precio:</dt>
                <dd class="col-sm-9">₡ @Model.Precio</dd>

                <dt class="col-sm-3 fw-bold">Categoría:</dt>
                <dd class="col-sm-9">@Model.Categoria</dd>

                <dt class="col-sm-3 fw-bold">Usuario:</dt>
                <dd class="col-sm-9">#@Model.Usuario?.UsuarioId</dd>
            </dl>

            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="ProductoId" />
                <div class="d-flex justify-content-end gap-2">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Eliminar
                    </button>
                    <a asp-action="Vista" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
}
